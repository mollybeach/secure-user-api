{
  "name": "secure-user-api",
  "version": "1.0.0",
  "description": "A simple REST API for managing users securely with OAuth2 and JWT authentication.",
  "main": "index.js",
  "scripts": {
    "server": "node index.js",
    "dev": "nodemon index.js",
    "pg:start": "brew services restart postgresql@14",
    "pg:stop": "brew services stop postgresql@14",
    "pg:create": "createdb mollybeach",
    "pg:create:new": "createdb $npm_config_name",
    "pg:drop": "dropdb mollybeach",
    "pg:drop:new": "dropdb $npm_config_name",
    "pg:list": "psql -l",
    "pg:shell": "psql mollybeach",
    "pg:shell:new": "psql $npm_config_name",
    "pg:dump": "pg_dump mollybeach > backup.sql",
    "pg:dump:new": "pg_dump $npm_config_name > $npm_config_name.sql",
    "pg:restore": "psql mollybeach < backup.sql",
    "pg:restore:new": "psql $npm_config_name < $npm_config_name.sql",
    "db:create": "npx sequelize-cli db:create",
    "db:create:new": "npx sequelize-cli db:create --database $npm_config_name",
    "db:drop": "npx sequelize-cli db:drop",
    "db:drop:new": "npx sequelize-cli db:drop --database $npm_config_name",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "db:seed:all": "npx sequelize-cli db:seed:all",
    "db:seed:undo:all": "npx sequelize-cli db:seed:undo:all",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed:all",
    "db:generate:model": "npx sequelize-cli model:generate --name $npm_config_name --attributes $npm_config_attrs",
    "db:generate:seed": "npx sequelize-cli seed:generate --name $npm_config_name",
    "db:generate:migration": "npx sequelize-cli migration:generate --name $npm_config_name",
    "create:new": "mkdir -p src/{controllers,models,routes,middleware,config,utils,services,validators,tests} && touch src/index.js src/app.js src/.env.example src/config/database.js",
    "create:controller": "touch src/controllers/$npm_config_name.controller.js",
    "create:model": "touch src/models/$npm_config_name.model.js",
    "create:route": "touch src/routes/$npm_config_name.route.js",
    "create:middleware": "touch src/middleware/$npm_config_name.middleware.js",
    "create:service": "touch src/services/$npm_config_name.service.js",
    "create:validator": "touch src/validators/$npm_config_name.validator.js",
    "create:test": "touch src/tests/$npm_config_name.test.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-github": "^1.1.0",
    "passport-github2": "^0.1.12",
    "passport-oauth2": "^1.8.0",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.5",
    "sequelize-cli": "^6.6.2"
  }
}
